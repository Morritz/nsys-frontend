---
import HeroImage from '../images/krawczyk1.png';
---

<section>
<img src={HeroImage}/>
<div class="title">
<p class="name">Krzysztof Krawczyk</p>
<p class="description">portfolio artysty</p>
</div>
</section>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap');
    section {
        position: relative;
        width: 100%;
	 	height: 100vh;
    }
	img { 
        height: 100%;
        width: 100%;
        object-fit: cover;
	}
    div.title {
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }
    p {
        color: white;
        font-family: 'Roboto', sans-serif;
        filter: drop-shadow(-4px -4px 4px #000);
        text-align: center;
    }
    p.name {
        font-size: 48px;
        text-transform: uppercase;
    }
    p.description {
        font-size: 24px;
    }
</style>